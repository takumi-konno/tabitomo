<div class="text-center">
  <h1>スケジュール作成</h1>
</div>

<div class="row">
  <div class="col-lg-6 offset-lg-3">

    <%= form_with(model: @schedule, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
      
      <div class="form-group">
        <%= f.label :image, 'イメージ画像' %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :date, '日付' %>
        <%= f.date_field :date, class: 'form-control', :placeholder => "2000-1-1" %>
      </div>

      <div class="form-group">
        <%= f.label :start_time, '開始時間' %>
        <%= f.time_field :start_time, class: 'form-control', :placeholder => "00:00" %>
      </div>

      <div class="form-group">
        <%= f.label :end_time, '終了時間' %>
        <%= f.time_field :end_time, class: 'form-control', :placeholder => "24:00" %>
      </div>
      
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control', :placeholder => "タイトル" %>
      </div>
      
      <div class="form-group">
        <%= f.label :supplement, '補足' %>
        <%= f.text_area :supplement, class: 'form-control', :placeholder => "補足"  %>
      </div>

      <%= hidden_field_tag :itinerary_id, @schedule.itinerary_id %>
      <%= f.submit '作成する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>