<% if current_user.likes?(itinerary) %>
  <%= form_with(model: current_user.bookmarks.find_by(itinerary_id: itinerary.id), local: true, method: :delete, class: 'd-inline') do |f| %>
    <%= hidden_field_tag :itinerary_id, itinerary.id %>
    <%= f.submit 'ブックマークを外す', class: 'btn btn-success btn-block mt-2'%>
  <% end %>
<% else %>
  <%= form_with(model: current_user.bookmarks.build, local: true, class: 'd-inline') do |f| %>
  <%= hidden_field_tag :itinerary_id, itinerary.id %>
  <%= f.submit 'ブックマークする', class: 'btn btn-success btn-block mt-2' %>
  <% end %>
<% end %>